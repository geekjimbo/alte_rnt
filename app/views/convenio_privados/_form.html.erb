<div class="row">
 <%= form_for @convenio_privado do |f| %>
 <div>

      <% if @convenio_privado.errors.any? %>
        <div id="error_explanation">
          <h2>El Asiento no puede ser grabado </h2>

          <ul>
          <% @convenio_privado.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">El Convenio Privado</div>
            <div class="panel-body">
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :titulo_convenio, "Título de Acuerdo" %>
                    <%= f.text_field :titulo_convenio, class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_vencimiento, "Fecha de Vencimiento" %>
                    <%=  f.date_field :fecha_vencimiento, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_suscripcion, "Fecha de Suscripción" %>
                    <%=  f.date_field :fecha_suscripcion, class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label "Adendas" %>
                    <%= f.text_field :adendas, class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%= f.label :num_anexos, "Número Anexos" %>
                    <%= f.text_field :num_anexos, class: 'form-control'%>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :nota, "Nota" %>
                    <%= f.text_area :nota, :rows=>"9"%>
                  </div>
                </div>
              </div>
            </div>
          </div>

      <%= f.fields_for(:asiento) do |asiento_f| %>
        <% render partial: 'shared/asiento', :locals => {:asiento_f => asiento_f, :clase => "convenio_privado"} %>
      <% end %>

          <div class="col-md-1 col-md-offset-7">
            <div class="form-group">
              <%= link_to 'Regresar', asientos_path %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <% if action_name != 'show' %>
                <%= f.submit 'Guardar cambios', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
   </div>
  <% end %>
</div>
