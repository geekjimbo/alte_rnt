<div class="row">
 <%= form_for @consecionpublica do |f| %>
   <div>
        <% if @consecionpublica.errors.any? %>
          <div id="error_explanation">
            <h2>La Conseción Pública no puede ser grabado </h2>

            <ul>
            <% @consecionpublica.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">La Concesión Pública</div>
            <div class="panel-body">
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :tipo_red, "Tipo Red" %>
                    <%= f.collection_select :tipo_red, ConsecionPublica::TIPOS_RED, :value, :label,  class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_emision, "Fecha Emisión del Contrato de Concesión" %>
                    <%=  f.date_field :fecha_emision, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%=  f.label :contrato_concesion, "Contrato de Concesión" %>
                    <%=  f.text_field :contrato_concesion, class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%=  f.label :numero_publicacion, "Número Publicación en la Gaceta" %>
                    <%=  f.text_field :numero_publicacion, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_publicacion, "Fecha Publicación en la Gaceta" %>
                    <%=  f.date_field :fecha_publicacion, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_vencimiento, "Fecha Vencimiento" %>
                    <%=  f.date_field :fecha_vencimiento, class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%=  f.label :numero_notificacion_refrendo, "Número Notificación Refrendo de la CGR" %>
                    <%=  f.text_field :numero_notificacion_refrendo, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_notificacion_refrendo, "Fecha de Notificación del Refrendo de la CGR" %>
                    <%=  f.date_field :fecha_notificacion_refrendo, class: 'form-control'%>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%= f.fields_for :espectro, @consecionpublica.espectro do |builder| %>
            <%= render partial: 'shared/espectro', :locals => {:f => builder, :clase => "consecion_publica", :objeto => @consecionpublica} %>
         <% end %>


          <div class="col-md-1 col-md-offset-7">
            <div class="form-group">
              <%= link_to 'Regresar', asientos_path %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <% if action_name != 'show' %>
                <%= f.submit 'Guardar cambios', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
   </div>
  <% end %>
</div>
