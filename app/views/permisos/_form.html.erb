<div class="row">
 <%= form_for @permiso do |f| %>
   <div>
        <% if @permiso.errors.any? %>
          <div id="error_explanation">
            <h2>El Permiso no puede ser grabado </h2>

            <ul>
            <% @permiso.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">El Permiso</div>
            <div class="panel-body">
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :modalidad_permiso, "Modalidad Permiso" %>
                    <%= f.collection_select :modalidad_permiso, Permiso::MODALIDADES_PERMISOS, :value, :label,  class: 'form-control'%>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%= f.fields_for :espectro, @permiso.espectro do |builder| %>
            <%= render partial: 'shared/espectro', :locals => {:f => builder, :clase => "permiso", :objeto => @permiso} %>
          <% end %>

          <div class="col-md-1 col-md-offset-7">
            <div class="form-group">
              <%= link_to 'Regresar', asientos_path %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <% if action_name != 'show' %>
                <%= f.submit 'Guardar cambios', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
   </div>
  <% end %>
</div>
