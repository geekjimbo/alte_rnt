<div class="row">
 <%= form_for @reglamento_tecnico do |f| %>
 <div>

      <% if @reglamento_tecnico.errors.any? %>
        <div id="error_explanation">
          <h2>El Reglamento Técnico no puede ser grabado </h2>

          <ul>
          <% @reglamento_tecnico.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">El Reglamento Técnico</div>
            <div class="panel-body">
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :titulo_reglamento, "Título del Reglamento" %>
                    <%= f.text_field :titulo_reglamento, class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%=  f.label :fecha_vigencia, "Fecha de Vigencia" %>
                    <%=  f.date_field :fecha_vigencia, class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%=  f.label :fecha_aprobacion, "Fecha del Acuerdo de Aprobación de la Junta Directiva de ARESEP" %>
                    <%=  f.date_field :fecha_aprobacion, class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%= f.label :numero_aprobacion_aresep, "Número del Acuerdo de Aprobación de la Junta Directiva de ARESEP" %>
                    <%= f.text_field :numero_aprobacion_aresep, class: 'form-control'%>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :reformas, "Reformas" %>
                    <%= f.text_area :reformas, :rows=>"3"%>
                  </div>
                </div>
              </div>
            </div>
          </div>

      <%= f.fields_for(:asiento) do |asiento_f| %>
        <% render partial: 'shared/asiento', :locals => {:asiento_f => asiento_f, :clase => "reglamento_tecnico"} %>
      <% end %>

          <div class="col-md-1 col-md-offset-7">
            <div class="form-group">
              <%= link_to 'Regresar', asientos_path %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <% if action_name != 'show' %>
                <%= f.submit 'Guardar cambios', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
   </div>
  <% end %>
</div>
