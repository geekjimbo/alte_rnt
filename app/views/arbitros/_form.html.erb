<div class="row">
 <%= form_for @arbitro do |f| %>
 <div>

      <% if @arbitro.errors.any? %>
        <div id="error_explanation">
          <h2>El Asiento no puede ser grabado </h2>

          <ul>
          <% @arbitro.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">Arbitro o Perito Acreditado</div>
            <div class="panel-body">
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :nombre_acreditado, "Nombre Acreditado" %>
                    <%= f.text_field :nombre_acreditado, class: 'form-control'%>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.label :identificacion_acreditado, "IdentificaciÃ³n Acreditado" %>
                    <%= f.text_field :identificacion_acreditado, class: 'form-control'%>
                  </div>
                </div>
              </div>
            </div>
          </div>

      <%= f.fields_for(:asiento) do |asiento_f| %>
        <% render partial: 'shared/asiento', :locals => {:asiento_f => asiento_f, :clase => "arbitro"} %>
      <% end %>

          <div class="col-md-1 col-md-offset-8">
            <div class="form-group">
              <%= link_to 'Regresar', asientos_path %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <% if action_name != 'show' %>
                <%= f.submit 'Guardar cambios', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
   </div>
  <% end %>
</div>
